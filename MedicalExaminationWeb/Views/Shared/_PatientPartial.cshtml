@model PatientViewModel

@Html.AntiForgeryToken()
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<partial model="@Model.Person" name="../Shared/_PersonPartial.cshtml" />
<div class="form-group">
    <label asp-for="@Model.InsuranceNumber" class="control-label col-md-2"></label>
    <div class="col-md-10">
        <input type="number" asp-for=@Model.InsuranceNumber class="form-control" />
        @Html.ValidationMessageFor(m => m.InsuranceNumber, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <label asp-for="InsuranceCompanies" class="control-label col-md-2"></label>
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.SelectedInsuranceCompanyId, Model.InsuranceCompanies, new { @class = "form-control" })
    </div>
</div>
