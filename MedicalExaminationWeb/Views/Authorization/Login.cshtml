@model LoginModel

@{
    ViewData["Title"] = "Authorization";
}

<div class="container body-content">
    <div style="background-color: #F7F7F7; padding: 20px 25px 30px; margin: 0 auto 25px; margin-top: 50px; box-shadow: 0px 2px rgba(0, 0, 0, 0.3); max-width: 350px; padding: 40px 40px;">
        <img class="img-circle" style="width: 250px; height: 250px; margin: 0 auto 10px; display: block" src="images/avatar.png" />
        <p id="profile-name" class="img-circle"></p>
        <form name="authorization" asp-controller="Authorization" asp-action="Login" class="form-signin" method="post" onsubmit="return validateAuthorization()">
            @Html.AntiForgeryToken()
            
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <span class="reauth-email"></span>
            <hr />
            <div class="form-group">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Имя пользователя" id="UserName"/>
                <label id="loginError" class="text-danger" hidden="true"></label>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" id="Password"/>
                <label id="passwordError" class="text-danger" hidden="true"></label>
            </div>
            <input type="submit" class="btn btn-lg btn-primary btn-block btn-signin" value="Войти" />
        </form>
    </div>
</div>
