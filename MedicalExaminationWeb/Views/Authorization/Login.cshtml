@model LoginModel

@{
    ViewData["Title"] = "Authorization";
}

<h2>Authorization</h2>

<div class="container body-content">
    <div class="card card-container">
        <img class="profile-img-card" src="images/avatar.png" />
        <p id="profile-name" class="profile-name-card"></p>
        @using (Html.BeginForm("Login", "Authorization", FormMethod.Post, new { @class = "form-signin"}))
        {
            @Html.AntiForgeryToken()

            <span class="reauth-email"></span>
            <hr />
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Имя пользователя"})
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль"})
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger"})
            </div>
            <input type="submit" class="btn btn-lg btn-primary btn-block btn-signin" />
        }
    </div>
</div>
