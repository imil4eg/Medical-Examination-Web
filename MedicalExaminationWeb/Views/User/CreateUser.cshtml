@model UserViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Создание пользователя</h2>

<form asp-controller="User" asp-action="CreateUser" method="post" class="form-horizontal">
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="form-group">
        <label asp-for="User.UserName" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="text" asp-for="User.UserName" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="User.Password" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input type="text" asp-for="User.Password" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Roles" class="control-label col-md-2"></label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedRoleId, Model.Roles, new {@class = "form-control"})
        </div>
    </div>
    @Html.EditorFor(m => m.Worker, "../Shared/_WorkerPartial.cshtml")
    <div class="col-md-12">
        <input type="submit" class="btn btn-success" value="Создать"/>
        <a asp-controller="Patient" asp-action="Patients" class="btn btn-danger">Отменить</a>
    </div>
</form>
