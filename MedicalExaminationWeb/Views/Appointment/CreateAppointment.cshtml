
@{
    ViewData["Title"] = "CreateAppointment";
}

<h2>CreateAppointment</h2>

<form>
    <div class="row">
        <div class="col-md-6">
            <div class="profile-head">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" id="questionnaire-tab" data-toggle="tab" href="#questionnaire" role="tab" aria-controls="questionnaire" aria-selected="True">Анкета</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="services-tab" data-toggle="tab" href="#services" role="tab" aria-controls="services" aria-selected="False">Анализы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="outcome-tab" data-toggle="tab" href="#outcome" role="tab" aria-controls="outcome" aria-selected="False">Исход</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <a class="btn btn-danger" asp-action="GetPatient" asp-controller="Patient" asp-route-patientId="">Отменить</a>
            <input type="submit" class="btn btn-success" value="Сохранить"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade active" id="questionnaire" role="tabpanel" aria-labeledby="questionnaire-tab">

                </div>
                <div class="tab-pane fade" id="services" role="tabpanel" aria-labeledby="services-tab">

                </div>
                <div class="tab-pane fade" id="outcome" role="tabpanel" aria-labeledby="outcome-tab">

                </div>
            </div>
        </div>
    </div>
</form>
