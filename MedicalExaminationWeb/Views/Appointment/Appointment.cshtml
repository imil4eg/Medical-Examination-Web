    </div>
</form>

@section Scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
            function post(){
                var url = "@Url.Action("UpdateAppointment", "Appointment")";

                $.ajax({
                    type: 'POST',
                    url: url,
                    data: $('#updateappointmentform').serialize(), //your form name.it takes all the values of model
                    dataType: 'json',
                    success: function(result) {
                        console.log(result);
                    }
                });
            };
    </script>
