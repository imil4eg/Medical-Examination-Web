@model AppointmentViewModel

@{
    ViewData["Title"] = "Appointment";
}

<h2>Случай</h2>

<form asp-controller="Appointment" asp-action="UpdateAppointment" id="updateappointmentform" enctype="multipart/form-data">
    @Html.HiddenFor(m => m.Patient.PersonId)
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-danger" asp-action="GetPatient" asp-controller="Patient" asp-route-patientId="">Отменить</a>
            <input id="postappointment" onclick="post()" type="button" class="btn btn-success" value="Сохранить" />
        </div>
    </div>
    <div class="row">
        <h3>Случай</h3>
        <div class="form-group">
            <label asp-for="Workers" class="control-label col-md-2"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.WorkerId, Model.Workers, new { @class = "form-control" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="Outcomes" class="control-label col-md-2"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.OutcomeId, Model.Outcomes, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        @Html.EditorFor(m => m.QuestionnaireTill75, "../Shared/_QuestionnaireTill75Partial.cshtml")
    </div>
    <div class="row">
        <h1>Анализы</h1>
        @for (int i = 0; i < Model.ServicesResults.Count; i++)
        {
            <hr />
            @Html.HiddenFor(m => m.ServicesResults[i].ServiceTypeId)
